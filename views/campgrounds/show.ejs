<% layout('layouts/boilerplate') %>
  <div class="row mb-3">
    <div class="col-6">

      <div class="card mb-3">
        <img src="<%= campground.image %>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title">
            <%= campground.title %>
          </h5>
          <p class="card-text">
          <p>
            <%= campground.description %>
          </p>
          </p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item text-muted">
            <%= campground.location %>
          </li>
          <li class="list-group-item">$ <%= campground.price%> (per night)</li>
        </ul>
        <div class="card-body">
          <a href="/campgrounds/<%= campground._id %>/edit" class="btn btn-info" class="card-link">Edit</a>
          <form action="/campgrounds/<%= campground._id%>?_method=DELETE" method="POST" class="d-inline">
            <button class="btn btn-danger">Delete</button>
          </form>
        </div>
        <div class="card-footer">
          <small class="text-body-secondary">Last updated 3 mins ago</small>
          <a href="/campgrounds">All Campgrounds</a>
        </div>
      </div>
    </div>
    <div class="col-6">
      <div>
        <h2>Leave A review</h2>
      </div>
      <form action="/campgrounds/<%= campground._id %>/reviews" novalidate class="mb-3 validated-form" method="POST">
        <div class="mb-3">

          <label for="rating" class="form-label">rating</label>
          <input type="range" name="review[rating]" id="rating" min="1" max="5" class="form-range">

          <div>
            <div class="mb-3">


              <label for="body" class="form-label">Add review</label>
              <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>


            </div>
            <button class="btn btn-success">Submit</button>
      </form>
      <div class="mt-3"></div>

      <% for(let review of campground.reviews){ %>

        <div class=" card mb-3">
          <div class="card-body">
            <h5 class="card-title"><b>Rating: <%= review.rating %></b></h5>
            <p class="card-text">Review: <%= review.body %></p>
            <form action="/campgrounds/<%= campground._id %>/reviews/<%= review._id %>?_method=DELETE" method = "POST">
              <button class="btn btn-sm btn-danger">Delete</button>
            </form>

          </div>
        </div>
  
        <% } %>
      
    </div>
    

  </div>